<div id="registerForm">
    <h1>Register</h1>
    <form action="/api/session/register" method="POST" >
        <input type="text" name="first_name" placeholder="Ingrese nombre" required> 
        <input type="text" name="last_name" placeholder="Ingrese apellido" required> 
        <input type="text" name="email" placeholder="Ingrese email" required> 
        <input type="text" name="password" placeholder="Ingrese password" required> 
        <button>Enviar</button>
    </form>
</div>